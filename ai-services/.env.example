# CogniLearn AI Services Configuration

# Google Gemini AI Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro

# NVIDIA API Configuration (Optional - for enhanced AI capabilities)
# Get your API key from: https://developer.nvidia.com/
NVIDIA_API_KEY=your_nvidia_api_key_here
NVIDIA_BASE_URL=https://integrate.api.nvidia.com/v1

# FastAPI Configuration
APP_NAME=CogniLearn AI Services
APP_VERSION=1.0.0
DEBUG=true
HOST=localhost
PORT=8000

# AI Model Configuration
MAX_TOKENS=2048
TEMPERATURE=0.7
TOP_P=0.9

# Request Limits
MAX_TEXT_LENGTH=10000
REQUEST_TIMEOUT=30
RATE_LIMIT_PER_MINUTE=60

# Data Paths
DATA_DIR=./data
MODELS_DIR=./models
CACHE_DIR=./cache

# Database Configuration (optional)
DATABASE_URL=

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=ai_services.log

# Security
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:3001"]
API_KEY_HEADER=X-API-Key

# Environment
ENVIRONMENT=development

# Model Settings
DEFAULT_MODEL=meta/llama3-70b-instruct
SENTENCE_TRANSFORMER_MODEL=all-mpnet-base-v2

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60

# Cache Settings (for future implementation)
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600
